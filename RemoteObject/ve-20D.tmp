namespace Xcelor8.Chat
{
    public delegate void myEventChanged(object sender, EventArgs e);
    
    public class myEvent : chatString
    {
        public virtual event myEventChanged Changed;

        public myEvent(string message)
        {

        }
        //public event myEvent eMessageSent;

        protected virtual void OnChanged(EventArgs e)
        {
            if (Changed != null)
                Changed(this, e);
        }

        public virtual string changeString(string newString)
        {
            bigString = newString;
            OnChanged(EventArgs.Empty);
            return newString;
        }

        public static string returnString()
        {
            string newString;
            newString = bigString;
            return newString;
        }
    }
}
